= form_tag(currencies_path, method: :post, |
  html: { :class => 'form-horizontal'}) do
  %table.table.table-striped 
    - @currencies.each do |currency|  
      %tr
        %td
          = label_tag 'Name'
          = text_field_tag "currency[#{currency.id}[unit]]", currency.unit
        %td
          = label_tag 'Ratio to dollar'
          = number_field_tag "currency[#{currency.id}[ratio]]", currency.ratio,    |
            step: 0.001
  = link_to_function "add new currency", "add_currency()", :class => 'new_currency'
  .form-actions
    = submit_tag 'Edit', :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),        |
      currencies_path, :class => 'btn'
