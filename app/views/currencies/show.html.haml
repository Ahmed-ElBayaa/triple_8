- model_class = Currency
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @currency.name
%p
  %strong= model_class.human_attribute_name(:ratio) + ':'
  %br
  = @currency.ratio
%p
  %strong= model_class.human_attribute_name(:country_id) + ':'
  %br
  = @currency.country_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), currencies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_currency_path(@currency), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), currency_path(@currency), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
