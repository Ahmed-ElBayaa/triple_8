- model_class = Currency
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:ratio)
      %th= model_class.human_attribute_name(:country_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @currencies.each do |currency|
      %tr
        %td= link_to currency.id, currency_path(currency)
        %td= currency.name
        %td= currency.ratio
        %td= currency.country_id
        %td=l currency.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_currency_path(currency), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), currency_path(currency), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_currency_path, :class => 'btn btn-primary'
