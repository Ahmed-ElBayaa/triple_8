- model_class = Currency
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:unit)
      %th= model_class.human_attribute_name(:ratio_to_one_dollar)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @currencies.each do |currency|
      %tr
        %td= currency.unit
        %td= currency.ratio
        %td
          
          = link_to t('.destroy', :default => t("helpers.links.destroy")),      |
            delete_currency_path(currency), method: :delete,          |
            :data => { :confirm => t('.confirm',                        |
            :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'

= link_to t('.edit', :default => t("helpers.links.edit")), |
    currencies_edit_path, :class => 'btn btn-mini'