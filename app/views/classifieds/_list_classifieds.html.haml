%div#classifieds_listing
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:edit)      
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:kind)
        %th= model_class.human_attribute_name(:title)
        %th= model_class.human_attribute_name(:main_category)
        %th= model_class.human_attribute_name(:sub_category)
        %th= model_class.human_attribute_name(:description)
        %th= sortable(Classified, model_class.human_attribute_name(:price))
        %th= model_class.human_attribute_name(:creator)
        %th= sortable(Classified, model_class.human_attribute_name(:created_at))
        %th= model_class.human_attribute_name(:delete)
        %th= t '.actions', :default => t("helpers.actions")
    %tbody
      - @classifieds.each do |classified|
        %tr
          %td= radio_button_tag 'edit', false, false, :'data-url'=> edit_classified_path(classified)
          %td= link_to classified.id, classified_path(classified)
          %td= classified.kind
          %td= classified.title
          %td= classified.main_category.name
          %td= classified.sub_category.name
          %td= classified.description
          %td= format_price classified
          %td= classified.user.name
          %td= l classified.created_at
          %td= check_box_tag 'delete', false, false, :'data-id'=> classified.identifier
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")),   |
              edit_classified_path(classified), :class => 'btn btn-mini' 

            = link_to t('.destroy', :default => t("helpers.links.destroy")),   |
              classified_path(classified), :method => :delete,                 |
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",  |
              :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

  = link_to t('.new', :default => t("helpers.links.new")), |
    new_classified_path, :class => 'btn btn-primary'
  = link_to t('const.edit_selected'), url_for, class: 'btn btn-primary', id: :edit_selected
  = link_to t('const.delete_selected'), url_for, class: 'btn btn-primary', id: :delete_selected,    |
    data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }
