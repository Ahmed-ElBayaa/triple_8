- model_class = Classified
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize

= form_for @search, :url => classifieds_path, :html => {method: :get,            |
  :class => 'form-horizontal'} do |s|
  = s.label :kind_eq
  = s.select :kind_eq, options_for_select(Classified::KINDS, @search.kind_eq),   |
     include_blank: true 
  %br
  = s.text_field :user_first_name_contains, placeholder: (t 'const.fname')
  = s.text_field :user_last_name_contains, placeholder: (t 'const.lname')
  %br  
  %table
    %tr
      %td  
        = s.text_field :title_contains, placeholder: (t 'const.title')
      %td
        = s.text_field :description_contains, placeholder: (t 'const.description') 
    %tr
      %td  
        = s.text_field :main_category_name_contains, placeholder:(t 'const.main_category')
      %td
        = s.text_field :sub_category_name_contains, placeholder: (t 'const.sub_category')
    %tr
      %td
        = s.text_field :country_name_like, placeholder: (t 'const.location')
  %br
  = s.text_field :price_gte, placeholder: (t 'const.min_price')
  = s.text_field :price_lte, placeholder: (t 'const.max_price')
  %br
  = s.text_field :created_at_gte, placeholder: (t 'const.posted_after'), :class => 'date'
  = s.text_field :updated_at_lte, placeholder: (t 'const.posted_before'),:class => 'date'
  %br  
  = s.text_field :tags_contains, placeholder: (t 'const.tags')
  %br
  = s.submit

= render('list_classifieds', model_class: model_class)
