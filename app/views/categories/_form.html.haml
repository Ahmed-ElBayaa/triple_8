= form_for @category, :html => { :class => 'form-horizontal' } do |f|
  = f.error_messages
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :main_category, :class => 'control-label'
    .controls
      = f.select :parent_id,                                              |
        options_from_collection_for_select(@main_categories,"id","name"), |
        prompt: 'it is a main category'                                   |
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      categories_path, :class => 'btn'                             |
