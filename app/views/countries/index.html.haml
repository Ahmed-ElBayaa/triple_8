- model_class = Country
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:short_name)
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:flag_file_name)
      %th= model_class.human_attribute_name(:flag_content_type)
      %th= model_class.human_attribute_name(:flag_file_size)
      %th= model_class.human_attribute_name(:flag_updated_at)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @countries.each do |country|
      %tr
        %td= link_to country.id, country_path(country)
        %td= country.name
        %td= country.short_name
        %td= country.identifier
        %td= country.flag_file_name
        %td= country.flag_content_type
        %td= country.flag_file_size
        %td= country.flag_updated_at
        %td= l country.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_country_path(country), :class => 'btn btn-mini'

          = link_to t('.destroy', :default => t("helpers.links.destroy")),      |
            country_path(country), :method => :delete,                          |
            :data => { :confirm => t('.confirm',                                |
            :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), |
  new_country_path, :class => 'btn btn-primary'